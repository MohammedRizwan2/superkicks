<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Superkicks - Home</title>
  <meta name="viewport" content="width=device-width,initial-scale=1"/>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"/>
</head>
<body class="bg-gray-100 font-sans">

  <!-- Header/Nav -->
  <header class="bg-[#15172B] text-white">
    <nav class="max-w-7xl mx-auto flex items-center justify-between px-6 py-4">
      <div class="flex items-center gap-3">
        <span class="font-black text-2xl">SUPERKICKS</span>
      </div>
      <ul class="flex gap-6 items-center">
        <li><a href="/" class="hover:text-blue-400 font-semibold">Home</a></li>
        <li><a href="/user/product/list" class="hover:text-blue-400">Shop</a></li>
        <li><a href="/categories" class="hover:text-blue-400">Categories</a></li>
        <% if (!isLoggedIn) { %>
          <li>
            <a href="/user/login" class="ml-3 hover:bg-blue-500 bg-blue-600 rounded px-4 py-1 font-semibold text-white">Login</a>
            <a href="/user/signup" class="ml-2 hover:bg-green-500 bg-green-600 rounded px-4 py-1 font-semibold text-white">Sign Up</a>
          </li>
        <% } else { %>
          <li>
            <span class="font-semibold"><i class="fas fa-user mr-1"></i> <%= user ? user.fullName : 'User' %></span>
            <a href="/user/logout" class="ml-3 hover:bg-red-400 bg-red-600 rounded px-4 py-1 font-semibold text-white">Logout</a>
          </li>
        <% } %>
      </ul>
    </nav>
  </header>

 <section
  class="relative overflow-hidden py-20 bg-cover bg-center bg-no-repeat min-h-screen"
  style="background-image: url('/img/home.webp');"
>
  <!-- Light overlay for better contrast -->
  <div class="absolute inset-0"></div>
</section>

<!-- Text content below the image section -->
<div class="max-w-4xl mx-auto px-6 py-12">
  <h1 class="text-4xl font-bold text-gray-900 mb-6 text-center">
    Welcome to Superkicks
  </h1>
  <p class="text-lg text-gray-800 leading-relaxed mx-auto max-w-3xl text-center">
    Discover the latest and greatest sneakers, exclusive limited editions, and must-have accessories.
    Shop with confidence and step up your style game with Superkicks – your ultimate sneaker destination.
  </p>
</div>



  <!-- Featured Categories -->
  <section class="max-w-7xl mx-auto px-6 py-12">
    <h2 class="text-2xl font-bold mb-6 text-gray-800">Shop by Category</h2>
    <div class="grid grid-cols-2 sm:grid-cols-4 gap-6">
      <% if (categories && categories.length > 0) { %>
        <% categories.slice(0,4).forEach(ctg => { %>
          <a href="/categories/<%= ctg._id %>" class="group block bg-white rounded-lg shadow-lg p-4 text-center hover:bg-blue-50 transition">
            
            <span class="font-semibold text-gray-800 group-hover:text-blue-600"><%= ctg.name %></span>
          </a>
        <% }) %>
      <% } else { %>
        <div class="text-gray-400 text-center col-span-4">No categories found.</div>
      <% } %>
    </div>
  </section>

  <!-- New/Featured Products -->
  <section class="bg-blue-50 py-12">
    <div class="max-w-7xl mx-auto px-6">
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-bold text-gray-800">New Arrivals</h2>
        <% if (isLoggedIn) { %>
          <a href="/user/product/list" class="text-blue-600 hover:underline">View All</a>
        <% } %>
      </div>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-8">
        <% if (products && products.length > 0) { %>
          <% products.slice(0,4).forEach(product => { %>
            <div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-xl transition">
              <a href="<%= isLoggedIn ? `/user/products/${product._id}` : '/login' %>">
                <img src="<%= product.images && product.images[0] ? product.images[0] : '/assets/placeholder.jpg' %>" alt="Sneaker" class="w-full h-48 object-cover" />
                <div class="p-4">
                  <h3 class="font-bold truncate text-lg text-gray-800 mb-1"><%= product.productName %></h3>
                  <div class="flex items-center gap-2 mb-1">
                    <% if (product.offer && product.offer > 0) { %>
                      <span class="bg-blue-100 text-blue-700 px-2 py-0.5 rounded text-xs font-bold mr-1"><%= product.offer %>% OFF</span>
                    <% } %>
                    <span class="text-xl font-semibold text-gray-900">
                      ₹<%= (product.variants && product.variants[0] && product.variants[0].regularPrice) ? product.variants[0].regularPrice.toFixed(2) : '0.00' %>
                    </span>
                  </div>
                  <% if (isLoggedIn) { %>
                    <form action="/cart/add" method="POST">
                      <input type="hidden" name="productId" value="<%= product._id %>"/>
                      <button type="submit" class="bg-blue-600 text-white px-3 py-1 rounded hover:bg-blue-700 mt-2">Add to Cart</button>
                    </form>
                  <% } else { %>
                    <a href="/user/login" class="bg-gray-400 text-white px-3 py-1 rounded mt-2 inline-block">Sign in to buy</a>
                  <% } %>
                </div>
              </a>
            </div>
          <% }) %>
        <% } else { %>
          <div class="col-span-4 text-gray-400">No products found.</div>
        <% } %>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="mt-16 bg-[#15172B] text-white px-6 py-8">
    <div class="max-w-7xl mx-auto flex flex-col sm:flex-row justify-between items-center">
      <div class="mb-3 sm:mb-0 font-bold">SUPERKICKS &copy; <%= new Date().getFullYear() %></div>
      <div class="space-x-6 text-sm">
        <a href="/privacy" class="hover:text-blue-400">Privacy Policy</a>
        <a href="/terms" class="hover:text-blue-400">Terms of Service</a>
        <a href="/contact" class="hover:text-blue-400">Contact</a>
      </div>
    </div>
  </footer>
</body>
</html>
