<!DOCTYPE html>
<html lang="en" class="scroll-smooth antialiased">
<head>
  <meta charset="UTF-8">
  <title>Superkicks – Home</title>
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"/>
</head>

<body class="bg-white text-gray-900 font-sans tracking-wide" data-just-logged-in="<%= justLoggedIn %>">
  <!-- ░░ HEADER ░░ -->
<header class="sticky top-0 z-50 bg-black/95 backdrop-blur supports-[backdrop-filter]:bg-black/70">
  <nav class="mx-auto max-w-7xl flex items-center justify-between px-6 py-4">
    <!-- Logo -->
    <a href="/" class="text-2xl font-extrabold tracking-[0.15em] text-white hover:text-gray-300 transition">
      SUPERKICKS
    </a>

    <!-- Desktop links -->
    <ul class="hidden md:flex items-center gap-10 text-sm uppercase font-medium">
      <li><a href="/"                   class="text-white hover:text-gray-300">Home</a></li>
      <li><a href="/user/product/list"  class="text-white hover:text-gray-300">Shop</a></li>
      <li><a href="/categories"         class="text-white hover:text-gray-300">Categories</a></li>

      <% if (!isLoggedIn) { %>
        <li class="space-x-2">
          <a href="/user/login"
             class="px-4 py-1.5 rounded border border-white text-white hover:bg-white hover:text-black transition">
            Login
          </a>
          <a href="/user/signup"
             class="px-4 py-1.5 rounded bg-white text-black hover:bg-transparent hover:text-white border border-white transition">
            Sign Up
          </a>
        </li>
      <% } else { %>
        <li class="flex items-center gap-4">
          <span class="text-white/80"><i class="fa-solid fa-user mr-1"></i><%= user ? user.fullName : 'User' %></span>
          <a href="/user/logout"
             class="px-4 py-1.5 rounded border border-white text-white hover:bg-white hover:text-black transition">
            Logout
          </a>
        </li>
      <% } %>
    </ul>

    <!-- Mobile hamburger -->
    <button id="mobileBtn"
            class="md:hidden text-white text-2xl focus:outline-none">
      <i class="fa-solid fa-bars"></i>
    </button>
  </nav>

  <!-- Mobile drawer -->
  <div id="mobileMenu"
       class="fixed inset-0 z-40 bg-black/90 backdrop-blur-md translate-x-full transition-transform duration-300 md:hidden">
    <div class="flex flex-col items-center gap-8 pt-24 text-lg font-medium">
      <a href="/"                   class="text-white hover:text-gray-300">Home</a>
      <a href="/user/product/list"  class="text-white hover:text-gray-300">Shop</a>
      <a href="/categories"         class="text-white hover:text-gray-300">Categories</a>

      <% if (!isLoggedIn) { %>
        <a href="/user/login"
           class="px-6 py-2 rounded border border-white text-white hover:bg-white hover:text-black transition">
          Login
        </a>
        <a href="/user/signup"
           class="px-6 py-2 rounded bg-white text-black hover:bg-transparent hover:text-white border border-white transition">
          Sign Up
        </a>
      <% } else { %>
        <span class="text-white/80"><i class="fa-solid fa-user mr-1"></i><%= user ? user.fullName : 'User' %></span>
        <a href="/user/logout"
           class="px-6 py-2 rounded border border-white text-white hover:bg-white hover:text-black transition">
          Logout
        </a>
      <% } %>
    </div>
  </div>
</header>

<!-- Mobile toggle script -->
<script>
  const btn   = document.getElementById('mobileBtn');
  const menu  = document.getElementById('mobileMenu');
  btn.addEventListener('click', () => {
    menu.classList.toggle('translate-x-full');
  });
</script>

  <!-- ░░ HERO (3-D shoe tilt) ░░ -->
<section class="relative isolate overflow-hidden select-none">
  

  <!-- content wrapper gives perspective -->
  <div id="heroWrap"
       class="max-w-7xl mx-auto flex flex-col lg:flex-row items-center gap-16 px-6 py-24 perspective-1000">
    <!-- text -->
    <div class="flex-1 space-y-6">
      <h1 class="text-5xl lg:text-6xl font-extrabold leading-tight">
        SUPERKICKS<br><span class="font-light">Best collections</span>
      </h1>
      <p class="max-w-md leading-relaxed">
Discover stylish, comfortable, and high-quality shoes for every occasion, all in one place.
      </p>
      <a href="/user/product/list"
         class="inline-block px-6 py-3 rounded bg-gray-900 text-white border border-gray-900
                hover:bg-transparent hover:text-gray-900 transition">
        Shop&nbsp;Now
      </a>
    </div>

    <!-- shoe image to tilt -->
    <div class="flex-1">
      <img id="heroShoe"
           src="/img/shoe-removebg-preview.png"
           alt="Sneaker hero"
           class="w-full max-w-md mx-auto drop-shadow-2xl will-change-transform" />
    </div>
  </div>
</section>

<!-- GSAP + ScrollTrigger already loaded earlier -->
<script>
/* 3-D tilt on pointer-move + subtle floating loop */
document.addEventListener('DOMContentLoaded', () => {
  const wrap  = document.getElementById('heroWrap');   // supplies perspective
  const shoe  = document.getElementById('heroShoe');   // tilting element
  const maxRot = 20;                                   // deg

  // interactive tilt
  wrap.addEventListener('pointermove', e => {
    const rect = wrap.getBoundingClientRect();
    const cx   = rect.left + rect.width  / 2;
    const cy   = rect.top  + rect.height / 2;
    const dx   = (e.clientX - cx) / (rect.width  / 2); // -1 … 1
    const dy   = (e.clientY - cy) / (rect.height / 2);

    gsap.to(shoe, {
      rotationY:  dx * maxRot,
      rotationX: -dy * maxRot,
      duration: .6,
      ease: 'power3.out'
    });
  });

  // return to front when pointer leaves
  wrap.addEventListener('pointerleave', () => {
    gsap.to(shoe, { rotationX: 0, rotationY: 0, duration: .8, ease: 'power3.out' });
  });

  // gentle autonomous float
  gsap.to(shoe, {
    y: 15,
    rotationZ: 2,
    duration: 2,
    yoyo: true,
    repeat: -1,
    ease: 'sine.inOut'
  });
});
</script>


  <!-- ░░ CATEGORIES ░░ -->
  <section class="max-w-7xl mx-auto px-6 py-20">
    <h2 class="text-3xl font-bold mb-10 text-center">Shop by Category</h2>
    <div class="grid grid-cols-2 sm:grid-cols-4 gap-8">
      <% if (categories?.length) { %>
        <% categories.forEach(ctg => { %>
          <a href="/categories/<%= ctg._id %>" class="group relative flex flex-col items-center gap-4 p-6 bg-gray-50 rounded hover:-translate-y-1 hover:shadow-lg transition">
            <div class="w-20 h-20 rounded-full bg-gray-200 grid place-content-center text-2xl">
              <i class="fa-solid fa-shoe-prints"></i>
            </div>
            <span class="font-semibold group-hover:text-gray-500"><%= ctg.name %></span>
          </a>
        <% }) %>
      <% } else { %>
        <p class="col-span-full text-center text-gray-400">No categories found.</p>
      <% } %>
    </div>
  </section>

  <!-- ░░ FEATURED PRODUCT DISPLAY ░░ -->
  <% if (products?.length) { 
       const hero = products[0]; %>
    <section class="relative bg-gray-900 text-white overflow-hidden">
      <img src="<%= hero.images %>" alt="" class="absolute inset-0 -z-10 object-cover w-full h-full opacity-10">
      <div class="max-w-7xl mx-auto grid md:grid-cols-2 gap-12 px-6 py-24">
        <div data-gsap="fade-right" class="space-y-6">
          <h3 class="text-4xl font-bold mb-2 leading-tight"><%= hero.productName %></h3>
          <p class="opacity-80">Brand: <%= hero.brand %></p>
          <p class="text-3xl font-semibold">₹<%= hero.lowestSalePrice.toFixed(2) %>
            <% if (hero.bestOffer) { %>
              <span class="ml-3 text-xl line-through opacity-60">₹<%= hero.lowestPrice.toFixed(2) %></span>
            <% } %>
          </p>
          <% if (hero.bestOffer) { %>
            <span class="inline-block bg-white text-gray-900 px-3 py-1 rounded-full text-sm font-semibold"><%= hero.bestOffer %>% OFF</span>
          <% } %>
          <a href="/user/products/<%= hero._id %>" class="inline-block mt-6 px-6 py-3 rounded bg-white text-gray-900 hover:bg-transparent hover:text-white border border-white transition">View Details</a>
        </div>
        <div data-gsap="fade-left">
          <img src="<%= hero.images[0] %>" alt="<%= hero.productName %>" class="w-full max-w-lg mx-auto drop-shadow-2xl">
        </div>
      </div>
    </section>
  <% } %>

  <!-- ░░ NEW ARRIVALS GRID ░░ -->
  <section class="max-w-7xl mx-auto px-6 py-20">
    <div class="flex justify-between items-end mb-10">
      <h2 class="text-3xl font-bold">New Arrivals</h2>
      <a href="/user/product/list" class="text-sm underline underline-offset-4 hover:text-gray-500">View All</a>
    </div>

    <div id="productsContainer" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-10">
      <% if (!products?.length) { %>
        <p class="col-span-full text-center text-gray-400">No products found.</p>
      <% } else { 
           products.slice(0,8).forEach(prod => { %>
        <a href="/user/products/<%= prod._id %>" class="group relative bg-gray-50 rounded-lg overflow-hidden shadow transition hover:-translate-y-1 hover:shadow-lg" data-gsap="card">
          <img src="<%= prod.images[0] ?? '/assets/placeholder.jpg' %>"
               alt="<%= prod.productName %>"
               class="w-full h-56 object-cover group-hover:scale-105 transition" />
          <div class="p-5">
            <h3 class="font-semibold mb-1 truncate"><%= prod.productName %></h3>
            <p class="text-xs uppercase tracking-wide opacity-60 mb-3"><%= prod.brand %></p>
            <% if (prod.bestOffer) { %>
              <p class="text-lg font-bold">₹<%= prod.lowestSalePrice.toFixed(2) %>
                <span class="text-sm line-through opacity-50 ml-2">₹<%= prod.lowestPrice.toFixed(2) %></span>
              </p>
            <% } else { %>
              <p class="text-lg font-bold">₹<%= prod.lowestPrice.toFixed(2) %></p>
            <% } %>
          </div>
        </a>
      <% }) } %>
    </div>
  </section>

  <!-- ░░ FOOTER ░░ -->
  <footer class="bg-gray-900 text-gray-200 px-6 py-12">
    <div class="max-w-7xl mx-auto grid sm:grid-cols-2 lg:grid-cols-3 gap-10 text-sm">
      <div>
        <h4 class="font-semibold mb-3">SUPERKICKS</h4>
        <p class="opacity-70">© <%= new Date().getFullYear() %>. All Rights Reserved.</p>
      </div>
      <div class="space-y-2">
        <h4 class="font-semibold mb-3">Company</h4>
        <a href="/privacy" class="block hover:opacity-80">Privacy Policy</a>
        <a href="/terms"   class="block hover:opacity-80">Terms of Service</a>
        <a href="/contact" class="block hover:opacity-80">Contact</a>
      </div>
      <div class="space-y-2">
        <h4 class="font-semibold mb-3">Follow Us</h4>
        <div class="flex gap-4 text-lg">
          <a href="#" class="hover:text-white"><i class="fab fa-instagram"></i></a>
          <a href="#" class="hover:text-white"><i class="fab fa-facebook-f"></i></a>
          <a href="#" class="hover:text-white"><i class="fab fa-x-twitter"></i></a>
        </div>
      </div>
    </div>
  </footer>

  <!-- ░░ SWEETALERT LOGIN TOAST ░░ -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>
    if (document.body.dataset.justLoggedIn === 'true') {
      Swal.fire({
        toast: true,
        position: 'top-end',
        icon: 'success',
        title: 'Logged in successfully',
        showConfirmButton: false,
        timer: 2000,
        timerProgressBar: true
      });
    }
  </script>

  <!-- ░░ GSAP ENTRANCE EFFECTS ░░ -->
  <script>
    
    document.addEventListener('DOMContentLoaded', () => {
      gsap.from('[data-gsap="fade-right"]', { x: -80, opacity: 0, duration: 1, ease: 'power2.out' });
      gsap.from('[data-gsap="fade-left"]',  { x:  80, opacity: 0, duration: 1, ease: 'power2.out', delay: 0.3 });
      gsap.from('[data-gsap="card"]', {
        y: 40,
        opacity: 0,
        duration: 0.8,
        ease: 'power3.out',
        stagger: 0.1,
        scrollTrigger: { trigger: '#productsContainer', start: 'top 90%' }
      });
    });
  </script>
</body>
</html>
