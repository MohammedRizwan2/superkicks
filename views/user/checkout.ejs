            <% } else { %>
              <% addresses.forEach((addr, index) => { %>
                <label class="flex items-start gap-3 p-4 border border-black/10 rounded-lg hover:border-black/20 cursor-pointer transition address-item">
                  <input type="radio" 
                         name="selectedAddress" 
                         value="<%= addr.id %>" 
