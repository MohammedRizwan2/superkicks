  <script>
    class WalletManager {
      constructor() {
        this.data = this.getDataFromContainer();
        this.loadingOverlay = document.getElementById('loading-overlay');
        this.referralModal = document.getElementById('referral-modal');
        
        this.init();
      }

      getDataFromContainer() {
        try {
          const container = document.getElementById('wallet-data-container');
          if (!container) {
            throw new Error('Wallet data container not found');
          }
          
          return {
            wallet: JSON.parse(decodeURIComponent(container.dataset.wallet || '{}')),
            user: JSON.parse(decodeURIComponent(container.dataset.user || '{}'))
          };
        } catch (error) {
          console.error('Failed to parse wallet data:', error);
          return {
            wallet: { balance: 0, transactions: [], referralCode: '', referralEarnings: 0, referralCount: 0, hasBeenReferred: false },
            user: {}
          };
        }
      }

      init() {
        this.renderWalletInfo();
        this.renderTransactions();
        this.renderReferralInfo();
        this.bindEvents();
      }

      formatINR(amount) {
        return new Intl.NumberFormat('en-IN', { maximumFractionDigits: 0 }).format(amount);
      }

      formatDate(dateString) {
        return new Date(dateString).toLocaleDateString('en-IN', {
          year: 'numeric',
          month: 'short',
          day: 'numeric',
          hour: '2-digit',
          minute: '2-digit'
        });
      }

      renderWalletInfo() {
        const { wallet } = this.data;
        
        document.getElementById('wallet-balance').textContent = `₹${this.formatINR(wallet.balance)}`;
        
        // Calculate stats
        let totalSpent = 0;
        let totalRefunds = 0;
        let referralBonus = 0;
        
        wallet.transactions.forEach(transaction => {
          switch(transaction.type) {
            case 'purchase':
              totalSpent += transaction.amount;
              break;
            case 'refund':
              totalRefunds += transaction.amount;
              break;
            case 'referral':
              referralBonus += transaction.amount;
              break;
          }
        });
        
        document.getElementById('total-spent').textContent = `₹${this.formatINR(wallet.totalSpent)}`;
        document.getElementById('total-refunds').textContent = `₹${this.formatINR(wallet.refundsReceived)}`;
        document.getElementById('referral-bonus').textContent = `₹${this.formatINR(wallet.referralBonus)}`;
        document.getElementById('total-transactions').textContent = wallet.transactions.length;
      }

      renderReferralInfo() {
        const { wallet } = this.data;
        console.log(wallet)
        document.getElementById('referral-earnings').textContent = `₹${this.formatINR(wallet.referralEarnings || 0)}`;
        document.getElementById('referral-count').textContent = wallet.referralCount || 0;
        document.getElementById('referral-code').textContent = wallet.referralCode || 'LOADING...';
        
        // Set modal inputs
        document.getElementById('referral-code-input').value = wallet.referralCode || '';
        const referralLink = `${window.location.origin}/user/register?ref=${wallet.referralCode}`;
        document.getElementById('referral-link-input').value = referralLink;
      }

      renderTransactions(filterType = 'all') {
        const { wallet } = this.data;
        const container = document.getElementById('transactions-container');
        const emptyState = document.getElementById('empty-state');
        
        let transactions = wallet.transactions;
        
        // Apply filter
        if (filterType !== 'all') {
          transactions = transactions.filter(t => t.type === filterType);
        }
        
        if (transactions.length === 0) {
          container.classList.add('hidden');
          emptyState.classList.remove('hidden');
          return;
        }
        
        container.classList.remove('hidden');
        emptyState.classList.add('hidden');
        
        const transactionsHTML = transactions.map(transaction => {
          const isCredit = ['credit'].includes(transaction.type);
          const iconMap = {
            purchase: 'shopping-cart',
            refund: 'undo',
            referral: 'gift'
          };
          
          return `
            <div class="flex items-start justify-between p-3 sm:p-4 bg-white/60 rounded-lg border border-black/5">
              <div class="flex items-start gap-3">
                <div class="p-1 sm:p-2 flex-shrink-0 ${isCredit ? 'bg-green-100' : 'bg-red-100'} rounded-lg">
                  <i class="fas fa-${iconMap[transaction.type]} ${isCredit ? 'text-green-600' : 'text-red-600'} text-sm"></i>
                </div>
                <div>
                  <h4 class="font-semibold text-sm sm:text-base text-black">${transaction.description}</h4>
                  <p class="text-xs text-black/60">${this.formatDate(transaction.date)}</p>
                  ${transaction.orderId ? `<p class="text-xs text-black/50">Order: #${transaction.orderId}</p>` : ''}
                  ${transaction.referredUser ? `<p class="text-xs text-black/50">Friend: ${transaction.referredUser}</p>` : ''}
                </div>
              </div>
              <div class="text-right flex-shrink-0 ml-4">
                <p class="font-bold text-sm sm:text-base ${isCredit ? 'text-green-600' : 'text-red-600'}">
                  ${isCredit ? '+' : '-'}₹${this.formatINR(transaction.amount)}
                </p>
                <span class="inline-flex px-2 py-0.5 mt-1 text-xs font-medium rounded-full 
                           ${transaction.status === 'completed' ? 'bg-green-100 text-green-800' : 
                             transaction.status === 'pending' ? 'bg-yellow-100 text-yellow-800' : 
                             'bg-gray-100 text-gray-800'}">
                  ${transaction.status}
                </span>
              </div>
            </div>
          `;
        }).join('');
        
        container.innerHTML = transactionsHTML;
      }

      bindEvents() {
        // Referral modal controls
        document.getElementById('referral-btn').addEventListener('click', () => this.showReferralModal());
        document.getElementById('close-referral-modal').addEventListener('click', () => this.hideReferralModal());
        
        // Copy buttons
        document.getElementById('copy-code-btn').addEventListener('click', () => this.copyToClipboard(document.getElementById('referral-code').textContent, 'Referral code copied!'));
        document.getElementById('copy-referral-btn').addEventListener('click', () => this.copyToClipboard(document.getElementById('referral-code-input').value, 'Referral code copied!'));
        document.getElementById('copy-link-btn').addEventListener('click', () => this.copyToClipboard(document.getElementById('referral-link-input').value, 'Referral link copied!'));
        
        // WhatsApp share
        document.getElementById('share-whatsapp').addEventListener('click', () => this.shareOnWhatsApp());
        
        // Filter
        document.getElementById('filter-type').addEventListener('change', (e) => {
          this.renderTransactions(e.target.value);
        });

        // Close modal on outside click
        this.referralModal.addEventListener('click', (e) => {
          if (e.target === this.referralModal) this.hideReferralModal();
        });

        // Apply referral code if section exists
        const applyBtn = document.getElementById('apply-referral-btn');
        if (applyBtn) {
          applyBtn.addEventListener('click', () => this.applyReferralCode());
        }
      }

      applyReferralCode() {
        const codeInput = document.getElementById('apply-referral-code');
        const messageEl = document.getElementById('apply-message');
        const code = codeInput.value.trim().toUpperCase();

        if (!code) {
          messageEl.textContent = 'Please enter a referral code';
          messageEl.className = 'text-xs mt-1 text-red-600';
          return;
        }

        this.showLoading();

        fetch('/user/api/wallet/apply-referral', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          credentials: 'include',
          body: JSON.stringify({ referralCode: code })
        })
        .then(response => response.json())
        .then(result => {
          if (result.success) {
            this.showToast('success', 'Referral applied successfully!');
            setTimeout(() => window.location.reload(), 1500);
          } else {
            messageEl.textContent = result.error || 'Invalid referral code';
            messageEl.className = 'text-xs mt-1 text-red-600';
          }
        })
        .catch(error => {
          console.error('Apply referral error:', error);
          messageEl.textContent = 'Failed to apply referral. Please try again.';
          messageEl.className = 'text-xs mt-1 text-red-600';
        })
        .finally(() => {
          this.hideLoading();
        });
      }

      showReferralModal() {
        this.referralModal.classList.remove('hidden');
        document.body.style.overflow = 'hidden';
      }

      hideReferralModal() {
        this.referralModal.classList.add('hidden');
        document.body.style.overflow = '';
      }

      async copyToClipboard(text, message) {
        try {
          await navigator.clipboard.writeText(text);
          this.showToast('success', message);
        } catch (error) {
          console.error('Copy failed:', error);
          this.showToast('error', 'Failed to copy to clipboard');
        }
      }

      shareOnWhatsApp() {
        const { wallet } = this.data;
        const message = `Join SuperKicks using my referral code ${wallet.referralCode} and we both get bonuses in our wallets! Shop amazing products at great prices. ${window.location.origin}/user/signup?ref=${wallet.referralCode}`;
        const whatsappUrl = `https://wa.me/?text=${encodeURIComponent(message)}`;
        window.open(whatsappUrl, '_blank');
      }

      showLoading() {
        this.loadingOverlay.classList.remove('hidden');
      }

      hideLoading() {
        this.loadingOverlay.classList.add('hidden');
      }

      showToast(type, message) {
        const toast = document.createElement('div');
        toast.className = `fixed top-4 right-4 z-50 px-6 py-3 rounded-lg shadow-lg transition-all duration-300 transform translate-x-full opacity-0`;
        
        if (type === 'success') {
          toast.classList.add('bg-green-100', 'text-green-800', 'border', 'border-green-200');
        } else {
          toast.classList.add('bg-red-100', 'text-red-800', 'border', 'border-red-200');
        }
        
        toast.innerHTML = `
          <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-circle'} mr-2"></i>
          <span>${message}</span>
        `;

        document.body.appendChild(toast);

        setTimeout(() => {
          toast.classList.remove('translate-x-full', 'opacity-0');
          toast.classList.add('translate-x-0', 'opacity-100');
        }, 100);
        
        setTimeout(() => {
          toast.classList.add('translate-x-full', 'opacity-0');
          setTimeout(() => toast.remove(), 300);
        }, 3000);
      }
    }

    // Initialize wallet manager
    document.addEventListener('DOMContentLoaded', function() {
      window.walletManager = new WalletManager();
    });
  </script>
