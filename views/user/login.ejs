<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Superkicks | Login</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <!-- Add any additional meta or stylesheets here -->
</head>

<body class="min-h-screen bg-white flex items-center justify-center">
  <main class="w-full max-w-6xl mx-auto flex flex-col lg:flex-row shadow-lg rounded-xl overflow-hidden" role="main" aria-label="User login form">
    
    <!-- Left Side: Login Form -->
    <section class="w-full lg:w-1/2 p-10 bg-white" aria-labelledby="loginHeading">
      <h1 id="loginHeading" class="text-4xl font-extrabold text-black mb-2">SUPERKICKS</h1>
      <h2 class="text-2xl font-semibold text-black mb-6">Login</h2>
      <p class="text-sm text-gray-500 mb-8">Login with your email and password</p>

      <!-- Message Display (Error or Success) -->
      <% if (message) { %>
        <div
          role="alert"
          aria-live="assertive"
          class="mb-4 p-3 rounded text-white <%= isError ? 'bg-red-600' : 'bg-green-600' %> font-medium"
        >
          <%= message %>
        </div>
      <% } %>

      <form action="/user/login" method="POST" novalidate autocomplete="off" aria-describedby="loginInstructions">

        <p id="loginInstructions" class="sr-only">
          Enter your email address and password to log in.
        </p>

        <!-- Email Input -->
        <div class="mb-5">
          <label for="email" class="block text-gray-700 font-medium mb-2">Email</label>
          <div class="flex items-center bg-gray-100 p-3 rounded-md">
            <input
              type="email"
              id="email"
              name="email"
              class="bg-transparent w-full outline-none text-gray-700"
              placeholder="Enter your email"
              required
              value="<%= typeof oldInput !== 'undefined' && oldInput.email ? oldInput.email : '' %>"
              autocomplete="email"
              autofocus
              aria-required="true"
              aria-describedby="emailHelp"
            />
          </div>
        </div>

        <!-- Password Input -->
        <div class="mb-3">
          <label for="password" class="block text-gray-700 font-medium mb-2">Password</label>
          <div class="flex items-center bg-gray-100 p-3 rounded-md">
            <input
              type="password"
              id="password"
              name="password"
              class="bg-transparent w-full outline-none text-gray-700"
              placeholder="Enter your password"
              required
              autocomplete="current-password"
              aria-required="true"
              aria-describedby="passwordHelp"
            />
          </div>
        </div>

        <!-- Forgot Password Link -->
        <div class="mb-6 text-sm text-blue-600 cursor-pointer hover:underline">
          <a href="/user/forgot-password" tabindex="0" aria-label="Go to forgot password page">
            Forgot password?
          </a>
        </div>

        <!-- Buttons -->
        <div class="flex gap-4 mb-6 flex-wrap">

          <button
            type="submit"
            class="bg-indigo-600 hover:bg-indigo-700 text-white px-6 py-2 rounded-md font-semibold focus:outline-none focus:ring-4 focus:ring-indigo-300 transition"
          >
            Login Now
          </button>

          <a
            href="/user/signup"
            class="bg-purple-500 hover:bg-purple-600 text-white px-6 py-2 rounded-md font-semibold flex items-center justify-center focus:outline-none focus:ring-4 focus:ring-purple-300 transition"
            tabindex="0"
            aria-label="Go to signup page"
          >
            Signup
          </a>
        </div>
      </form>

      <!-- Divider -->
      <div class="border-t pt-4 mb-4 text-center text-gray-600 font-semibold select-none" aria-hidden="true">
        Login with Google
      </div>

      <!-- Google Login -->
      <div class="flex justify-center">
        <a
          href="/user/auth/google"
          class="w-full flex items-center justify-center gap-2 border border-gray-300 py-2 px-4 rounded mb-4 hover:bg-gray-100 transition"
          aria-label="Login with Google"
        >
          <img src="https://www.google.com/favicon.ico" alt="Google logo" class="w-5 h-5" />
          <span class="text-sm">Login with Google</span>
        </a>
      </div>
    </section>

    <!-- Right Side: Image -->
<aside class="w-full lg:w-1/2 bg-gradient-to-br from-indigo-400 to-purple-600 flex items-center justify-center p-10" aria-hidden="true">
  <img
    src="/img/shoe-removebg-preview.png"
    alt="Superkicks shoe"
    class="w-80 h-auto object-contain rounded-xl shadow-lg"
  />
</aside>

  </main>
</body>
</html>
