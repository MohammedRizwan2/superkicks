<%- include('../partials/header') %>

<main class="bg-gray-50">
  <!-- Match header container to keep perfect alignment -->
  <div class="max-w-7xl mx-auto px-4 lg:px-6 py-8">
    <!-- Flex row: sidebar + main beside each other -->
    <div class="flex gap-8">
      
      <!-- Sidebar -->
      <aside class="w-64 shrink-0">
        <div class="bg-white rounded-xl shadow p-6">
          <!-- User card -->
          <div class="bg-blue-600 text-white rounded-lg p-4 mb-6">
            <div class="flex items-center gap-3">
              <div class="w-12 h-12 rounded-full overflow-hidden bg-white">
                <img src="<%= (user && user.avatarUrl) ? user.avatarUrl : '/images/default-avatar.png' %>" alt="Avatar" class="w-full h-full object-cover">
              </div>
              <div>
                <p class="font-semibold">
                  <%= (user && (user.fullName || user.name)) ? (user.fullName || user.name) : 'User' %>
                </p>
                <p class="text-blue-200 text-xs">Member</p>
              </div>
            </div>
          </div>

          <!-- Nav -->
          <nav class="space-y-2">
            <a href="/profile" class="flex items-center gap-3 px-4 py-3 rounded-lg bg-gray-100 text-gray-900">
              <i class="fas fa-user w-5"></i><span>Account Overview</span>
            </a>
            <a href="/user/orders" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-700 hover:bg-gray-100">
              <i class="fas fa-bag-shopping w-5"></i><span>My Orders</span>
            </a>
            <a href="/user/addresses" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-700 hover:bg-gray-100">
              <i class="fas fa-map-marker-alt w-5"></i><span>Manage Addresses</span>
            </a>
            <a href="/user/wishlist" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-700 hover:bg-gray-100">
              <i class="far fa-heart w-5"></i><span>Wishlist</span>
            </a>
            <a href="/user/cart" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-700 hover:bg-gray-100">
              <i class="fas fa-shopping-cart w-5"></i><span>Cart</span>
            </a>
            <a href="/user/wallet" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-700 hover:bg-gray-100">
              <i class="fas fa-wallet w-5"></i><span>Wallet</span>
            </a>
            <a href="/user/coupons" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-700 hover:bg-gray-100">
              <i class="fas fa-ticket w-5"></i><span>Coupons</span>
            </a>
            <a href="/user/logout" class="flex items-center gap-3 px-4 py-3 rounded-lg text-red-600 hover:bg-red-50">
              <i class="fas fa-right-from-bracket w-5"></i><span>Logout</span>
            </a>
          </nav>
        </div>
      </aside>

      <!-- Main content -->
      <section class="flex-1 space-y-8">
        <!-- Header row with Edit -->
        <div class="flex items-start justify-between">
          <h1 class="text-2xl md:text-3xl font-bold">Profile Overview</h1>
          <a href="/user/profile/edit" class="inline-flex items-center gap-2 bg-blue-600 text-white px-5 py-2.5 rounded-lg hover:bg-blue-700 transition">
            <i class="fas fa-pen"></i><span>Edit Profile</span>
          </a>
        </div>

        <!-- User Details Card -->
        <div class="bg-white rounded-xl shadow p-6">
          <div class="grid md:grid-cols-[auto,1fr] gap-6 items-start">
            <!-- Avatar -->
            <div class="w-28 h-28 rounded-full overflow-hidden bg-gray-200 mx-auto md:mx-0">
              <img src="<%= (user && user.avatarUrl) ? user.avatarUrl : '/images/default-avatar.png' %>" alt="Avatar" class="w-full h-full object-cover">
            </div>

            <!-- Basic info -->
            <div class="grid sm:grid-cols-2 gap-6 w-full">
              <div>
                <label class="block text-sm text-gray-500 mb-1">Full Name</label>
                <p class="px-4 py-3 bg-gray-50 rounded-lg border border-gray-200">
                  <%= (user && (user.fullName || user.name)) ? (user.fullName || user.name) : 'Not provided' %>
                </p>
              </div>
              <div>
                <label class="block text-sm text-gray-500 mb-1">Email</label>
                <p class="px-4 py-3 bg-gray-50 rounded-lg border border-gray-200">
                  <%= (user && user.email) ? user.email : 'Not provided' %>
                </p>
              </div>
              <div>
                <label class="block text-sm text-gray-500 mb-1">Phone</label>
                <p class="px-4 py-3 bg-gray-50 rounded-lg border border-gray-200">
                  <%= (user && user.phone) ? user.phone : 'Not provided' %>
                </p>
              </div>
              <div>
                <label class="block text-sm text-gray-500 mb-1">Member Since</label>
                <p class="px-4 py-3 bg-gray-50 rounded-lg border border-gray-200">
                  <%= user && user.createdAt ? new Date(user.createdAt).toLocaleDateString() : '-' %>
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- Addresses -->
        <div class="bg-white rounded-xl shadow p-6">
          <div class="flex items-center justify-between mb-4">
            <h2 class="text-xl font-semibold">Saved Addresses</h2>
            <a href="/user/addresses" class="text-blue-600 hover:text-blue-700 font-medium">Manage Addresses</a>
          </div>

          <% 
            // Prefer user.addresses if present; else use addresses prop from controller
            const addr = (user && Array.isArray(address)) 
              ? address 
              : (Array.isArray(address) ? address: []);
          %>

          <% if (!addr || addr.length === 0) { %>
            <div class="p-6 rounded-lg bg-gray-50 border border-gray-200 text-gray-600">
              No addresses added yet. <a href="/user/addresses" class="text-blue-600 hover:underline">Add one now</a>.
            </div>
          <% } else { %>
            <div class="grid md:grid-cols-2 gap-4">
              <% addr.forEach(a => { %>
                <div class="border border-gray-200 rounded-lg p-4">
                  <div class="flex items-center justify-between mb-2">
                    <p class="font-medium capitalize">
                      <i class="fas fa-<%= a.type === 'home' ? 'home' : (a.type === 'work' ? 'building' : 'map-marker-alt') %> text-blue-600 mr-2"></i>
                      <%= a.type || 'Address' %>
                    </p>
                  </div>

                  <!-- Your schema fields -->
                  <p class="text-sm text-gray-900 font-medium"><%= a.name %></p>
                  <p class="text-sm text-gray-700 mt-1"><%= a.address %></p>
                  <% if (a.landmark) { %>
                    <p class="text-sm text-gray-600">Near <%= a.landmark %></p>
                  <% } %>
                  <p class="text-sm text-gray-700"><%= a.state %>, <%= a.country %> - <%= a.pinCode %></p>

                  <div class="flex flex-wrap items-center gap-4 pt-3 mt-3 border-t border-gray-100">
                    <% if (a.phone) { %>
                      <span class="text-sm text-gray-600 flex items-center gap-1">
                        <i class="fas fa-phone text-xs"></i><%= a.phone %>
                      </span>
                    <% } %>
                    <% if (a.email) { %>
                      <span class="text-sm text-gray-600 flex items-center gap-1">
                        <i class="fas fa-envelope text-xs"></i><%= a.email %>
                      </span>
                    <% } %>
                  </div>
                </div>
              <% }) %>
            </div>
          <% } %>
        </div>

      </section>
      <!-- End main -->
    </div>
    <!-- End flex row -->
  </div>
  <!-- End container -->
</main>

<footer class="bg-gray-900 text-white mt-16">
  <div class="max-w-7xl mx-auto px-6 py-10 grid sm:grid-cols-2 lg:grid-cols-4 gap-6 text-sm">
    <div class="flex items-center gap-3">
      <i class="fas fa-shipping-fast text-2xl text-blue-400"></i>
      <div><p class="font-semibold">Express Shipping</p><p class="text-gray-400">Ships in 24 hours</p></div>
    </div>
    <div class="flex items-center gap-3">
      <i class="fas fa-location-dot text-2xl text-blue-400"></i>
      <div><p class="font-semibold">Shipping Tracking</p><p class="text-gray-400">Track your orders</p></div>
    </div>
    <div class="flex items-center gap-3">
      <i class="fas fa-shield-halved text-2xl text-blue-400"></i>
      <div><p class="font-semibold">Buy Safely</p><p class="text-gray-400">Secure checkout</p></div>
    </div>
    <div class="flex items-center gap-3">
      <i class="fab fa-cc-visa text-2xl text-blue-400"></i>
      <i class="fab fa-cc-mastercard text-2xl text-red-400"></i>
      <i class="fab fa-paypal text-2xl text-blue-600"></i>
    </div>
  </div>
</footer>
