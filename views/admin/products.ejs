<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Products - Superkicks</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"/>
</head>
<body class="bg-gray-100 font-sans"data-justedited="<%= productJustEditted %>" 
  data-justadded="<%= productJustAdded %>">
  <div class="flex min-h-screen">
    <!-- Sidebar -->
    <aside class="w-64 bg-[#15172B] text-white flex flex-col justify-between">
      <div>
        <h2 class="text-center text-2xl font-bold py-6">SUPERKICKS</h2>
        <ul class="space-y-2 px-4">
          <li><a href="/admin/dashboard" class="flex items-center p-2 hover:bg-blue-600 rounded"><i class="fas fa-tachometer-alt mr-2"></i> Dashboard</a></li>
          <li><a href="/admin/customers" class="flex items-center p-2 hover:bg-blue-600 rounded"><i class="fas fa-users mr-2"></i> Customers</a></li>
          <li><a href="/admin/products" class="flex items-center p-2 bg-blue-600 rounded"><i class="fas fa-box mr-2"></i> Products</a></li>
          <li><a href="/admin/orders" class="flex items-center p-2 hover:bg-blue-600 rounded"><i class="fas fa-shopping-cart mr-2"></i> Orders</a></li>
          <li><a href="/admin/banners" class="flex items-center p-2 hover:bg-blue-600 rounded"><i class="fas fa-image mr-2"></i> Banner Management</a></li>
          <li><a href="/admin/coupons" class="flex items-center p-2 hover:bg-blue-600 rounded"><i class="fas fa-tags mr-2"></i> Coupon Management</a></li>
          <li><a href="/admin/sales-report" class="flex items-center p-2 hover:bg-blue-600 rounded"><i class="fas fa-chart-line mr-2"></i> Sales Report</a></li>
          <li><a href="/admin/category" class="flex items-center p-2 hover:bg-blue-600 rounded"><i class="fas fa-layer-group mr-2"></i> Category</a></li>
        </ul>
      </div>
      <div class="px-4 py-4 space-y-2">
        <a href="/admin/settings" class="flex items-center p-2 hover:bg-blue-600 rounded"><i class="fas fa-cog mr-2"></i> Settings</a>
        <a href="/admin/logout" class="flex items-center p-2 hover:bg-red-600 rounded"><i class="fas fa-sign-out-alt mr-2"></i> Logout</a>
      </div>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 p-6">
      <header class="flex justify-end mb-4">
        <div class="flex items-center gap-2 text-gray-700">
          <i class="fas fa-user"></i>
          <span class="font-semibold">ADMIN</span>
        </div>
      </header>

      <h2 class="text-2xl font-semibold text-gray-800 mb-4">Products</h2>

      <div class="flex justify-between items-center mb-4">
        <!-- Search Form -->
        <form action="/admin/products" method="GET" class="flex items-center">
          <input
            type="text"
            name="q"
            value="<%= typeof query !== 'undefined' ? query : '' %>"
            placeholder="Search by product name or brand..."
            class="ml-2 border px-2 py-1 rounded"
          />
          <% if (typeof query !== 'undefined' && query) { %>
            <a href="/admin/products" class="ml-2 px-2 py-1 bg-gray-300 rounded hover:bg-gray-400">Clear</a>
          <% } %>
          <button type="submit" class="ml-2 px-2 py-1 bg-blue-600 text-white rounded">Search</button>
        </form>

        <a href="/admin/products/add" class="px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700 flex items-center">
          <i class="fas fa-plus mr-2"></i>Add Product
        </a>
      </div>

      <div class="overflow-x-auto rounded-lg">
        <table class="w-full text-sm text-left bg-white shadow-lg rounded-lg">
          <thead class="bg-gray-200 text-gray-700">
            <tr>
              <th class="px-4 py-3">S.No</th>
              <th class="px-4 py-3">Product Name</th>
              <th class="px-4 py-3">Brand</th>
              <th class="px-4 py-3">Category</th>
              <th class="px-4 py-3">Variants<br><span class="text-xs text-gray-500 font-normal">(Size / Price)</span></th>
              <th class="px-4 py-3">Offer</th>
              <th class="px-4 py-3">Status</th>
              <th class="px-4 py-3">Actions</th>
            </tr>
          </thead>
          <tbody class="text-gray-700">
            <% if (products.length === 0) { %>
              <tr>
                <td colspan="8" class="text-center py-4 text-gray-400">No products found.</td>
              </tr>
            <% } %>
            <% products.forEach((product, index) => { %>
              <tr class="border-t align-top">
                <td class="px-4 py-2"><%= (currentPage - 1) * 10 + index + 1 %></td>
                <td class="px-4 py-2"><%= product.productName %></td>
                <td class="px-4 py-2"><%= product.brand %></td>
                <td class="px-4 py-2"><%= product.categoryId ? product.categoryId.name : 'Unknown' %></td>
                <td class="px-4 py-2">
                  <% if(product.variants && product.variants.length > 0) { %>
                    <ul class="flex flex-wrap gap-1">
                      <% product.variants.forEach(variant => { %>
                        <li>
                          <span class="inline-block bg-gray-100 rounded px-2 py-1">
                            <b><%= variant.size %></b>: ₹<%= variant.regularPrice.toFixed(2) %>
                          </span>
                        </li>

                      <% }) %>
                    </ul>
                  <% } else { %>
                    <span class="text-gray-400">No variants</span>
                  <% } %>
                </td>
                <td class="px-4 py-2"><%= product.offer ? product.offer + '%' : '—' %></td>
                <td class="px-4 py-2 text-center">
                  <% if (product.isListed) { %>
                    <span class="text-green-600 font-semibold">Listed</span>
                  <% } else { %>
                    <span class="text-red-600 font-semibold">Unlisted</span>
                  <% } %>
                </td>
                <td class="px-4 py-2 flex items-center gap-2">
                  <a href="/admin/products/<%= product._id %>/edit" title="Edit" class="p-2 bg-yellow-500 hover:bg-yellow-600 rounded text-white">
                    <i class="fas fa-edit"></i>
                  </a>
                  <!-- Add more actions as needed, such as View or Delete -->
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>

      <!-- Pagination Controls -->
      <div class="mt-4 flex justify-between items-center text-sm text-gray-600">
        <div>
          Page <%= currentPage %> of <%= totalPages %>
        </div>
        <div class="space-x-2">
          <% if (currentPage > 1) { %>
            <a href="/admin/products?<%= query ? 'q=' + encodeURIComponent(query) + '&' : '' %>page=<%= currentPage - 1 %>" class="px-3 py-1 rounded bg-gray-200 hover:bg-gray-300">Previous</a>
          <% } %>
          <% if (currentPage < totalPages) { %>
            <a href="/admin/products?<%= query ? 'q=' + encodeURIComponent(query) + '&' : '' %>page=<%= currentPage + 1 %>" class="px-3 py-1 rounded bg-gray-200 hover:bg-gray-300">Next</a>
          <% } %>
        </div>
      </div>
    </main>
  </div>
   <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <script>

    document.addEventListener('DOMContentLoaded', () => {
    const body = document.body;
    const justEdited =body.dataset.justedited==="true";
   
  
    const justAdded = body.dataset.justadded==="true";

    if (justEdited) {
        Swal.fire({
            toast: true,
            position: 'top-end',
            icon: 'success',
            title: 'Product updated successfully',
            showConfirmButton: false,
            timer: 2000
        });
    }

    if (justAdded) {
        Swal.fire({
            toast: true,
            position: 'top-end',
            icon: 'success',
            title: 'Product added successfully',
            showConfirmButton: false,
            timer: 2000
        });
    }
});
  </script>
</body>
</html>
