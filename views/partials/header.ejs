<!DOCTYPE html>
<html lang="en" class="scroll-smooth antialiased">
<head>
  <meta charset="UTF-8">
  <title>Superkicks – Home</title>
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"/>
</head>

<body class="bg-white text-gray-900 font-sans tracking-wide" data-just-logged-in="<%= justLoggedIn||false %>">
  <!-- ░░ HEADER ░░ -->
<header class="sticky top-0 z-50 bg-black/95 backdrop-blur supports-[backdrop-filter]:bg-black/70">
  <nav class="mx-auto max-w-7xl flex items-center justify-between px-6 py-4">
    <!-- Logo -->
    <a href="/" class="text-2xl font-extrabold tracking-[0.15em] text-white hover:text-gray-300 transition">
      SUPERKICKS
    </a>

    <!-- Desktop links -->
    <ul class="hidden md:flex items-center gap-10 text-sm uppercase font-medium">
      <li><a href="/"                   class="text-white hover:text-gray-300">Home</a></li>
      <li><a href="/user/product/list"  class="text-white hover:text-gray-300">Shop</a></li>
      <li><a href="/user/categories"         class="text-white hover:text-gray-300">Categories</a></li>

      <% if (!isLoggedIn) { %>
        <li class="space-x-2">
          <a href="/user/login"
             class="px-4 py-1.5 rounded border border-white text-white hover:bg-white hover:text-black transition">
            Login
          </a>
          <a href="/user/signup"
             class="px-4 py-1.5 rounded bg-white text-black hover:bg-transparent hover:text-white border border-white transition">
            Sign Up
          </a>
        </li>
      <% } else { %>
        <li class="flex items-center gap-4">
          <span class="text-white/80"><i class="fa-solid fa-user mr-1"></i><%= user ? user.fullName : 'User' %></span>
          <a href="/user/logout"
             class="px-4 py-1.5 rounded border border-white text-white hover:bg-white hover:text-black transition">
            Logout
          </a>
        </li>
      <% } %>
    </ul>

    <!-- Mobile hamburger -->
    <button id="mobileBtn"
            class="md:hidden text-white text-2xl focus:outline-none">
      <i class="fa-solid fa-bars"></i>
    </button>
  </nav>

  <!-- Mobile drawer -->
  <div id="mobileMenu"
       class="fixed inset-0 z-40 bg-black/90 backdrop-blur-md translate-x-full transition-transform duration-300 md:hidden">
    <div class="flex flex-col items-center gap-8 pt-24 text-lg font-medium">
      <a href="/"                   class="text-white hover:text-gray-300">Home</a>
      <a href="/user/product/list"  class="text-white hover:text-gray-300">Shop</a>
      <a href="/user/categories"         class="text-white hover:text-gray-300">Categories</a>

      <% if (!isLoggedIn) { %>
        <a href="/user/login"
           class="px-6 py-2 rounded border border-white text-white hover:bg-white hover:text-black transition">
          Login
        </a>
        <a href="/user/signup"
           class="px-6 py-2 rounded bg-white text-black hover:bg-transparent hover:text-white border border-white transition">
          Sign Up
        </a>
      <% } else { %>
        <span class="text-white/80"><i class="fa-solid fa-user mr-1"></i><%= user ? user.fullName : 'User' %></span>
        <a href="/user/logout"
           class="px-6 py-2 rounded border border-white text-white hover:bg-white hover:text-black transition">
          Logout
        </a>
      <% } %>
    </div>
  </div>
</header>

<!-- Mobile toggle script -->
<script>
  const btn   = document.getElementById('mobileBtn');
  const menu  = document.getElementById('mobileMenu');
  btn.addEventListener('click', () => {
    menu.classList.toggle('translate-x-full');
  });
</script>